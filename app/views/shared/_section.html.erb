<div class="col-12 d-flex flex-column align-items-center p-5">
  <div class="col-8">
    <h1 class="text-center">Create a New Section</h1>
  </div>
  <div class="d-flex justify-content-center align-items-center flex-column border rounded p-3 col-8">
    <%= form_with model: [current_user, @section], class: 'my-form' do |form| %>
      <div class="mb-3">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= form.label :icon %>
        <%= form.file_field :icon, class: 'form-control' %>
      </div>

      <div class="mb-3 d-flex justify-content-center">
        <%= form.submit "Submit", class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
  </div>
</div>