<div class="col-12 border d-flex flex-column align-items-center py-3 px-5">
  <div class="col-8">
    <h4 class="text-center text-dark fs-3">Make a Payment</h4>
  </div>
  <div class="d-flex justify-content-center align-items-center flex-column border rounded p-3 col-8">
    <%= form_with url: user_section_payments_path, method: :post, class: "my-form" do |form| %>
      <div class="mb-3">
        <%= form.label :name %>
        <%= form.text_field :name, name: 'payment[name]', class: "form-control form-control-lg" %>
      </div>

      <div class="mb-3">
        <%= form.label :amount %>
        <%= form.text_field :amount, name: 'payment[amount]', class: "form-control form-control-lg" %>
      </div>

      <div class="mb-3">
        <%= form.label :section %>
        <%= form.select :section, options_from_collection_for_select(@sections, 'id', 'name'), { prompt: "Select a section" }, class: "form-select form-control-lg" %>
      </div>

      <div class="mb-3 text-center">
        <%= form.submit "Submit", class: "btn btn-success btn-lg" %>
      </div>
    <% end %>
  </div>
</div>